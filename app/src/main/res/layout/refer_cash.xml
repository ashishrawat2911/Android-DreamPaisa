<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#ffff"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    tools:showIn="@layout/fragment_wallet"
    android:layout_marginBottom="10dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/referCashTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/referCashDescTextView"
        app:layout_constraintEnd_toEndOf="@+id/referCashDescTextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/referCashDescTextView" />

    <TextView
        android:id="@+id/referCashTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/refer_cash"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/referCashDescTextView"
        app:layout_constraintEnd_toEndOf="@+id/referCashDescTextView"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/referCashDescTextView"
        app:layout_constraintTop_toTopOf="@+id/referCashTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/referCashDescTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Cash earned from refering to other users"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>

