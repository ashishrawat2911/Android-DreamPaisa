<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0055B7"
    tools:context=".fragments.MainPlayEarnFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ffff"
            android:src="@drawable/game_pad" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="85dp">

            <TextView
                android:id="@+id/main_spin_wheel_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/spin_wheel"
                android:textColor="#dd000000"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="#ddba5531"
            app:cardCornerRadius="15dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="205dp">

            <TextView
                android:id="@+id/main_coin_toss_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/coin_toss"
                android:textColor="#dd000000"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="#dd69e1e1"
            app:cardCornerRadius="15dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="240dp">

            <TextView
                android:id="@+id/main_hit_wicket_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="@string/hit_the_wicket"
                android:textColor="#dd000000"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>