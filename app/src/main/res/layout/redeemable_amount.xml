<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#ffff"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    tools:showIn="@layout/fragment_wallet">

    <TextView
        android:id="@+id/redeemableAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/redeemableAmountDescTextView"
        app:layout_constraintEnd_toEndOf="@+id/redeemableAmountDescTextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/redeemableAmountDescTextView" />

    <TextView
        android:id="@+id/redeemableAmountTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/redeemable_amount"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/redeemableAmountDescTextView"
        app:layout_constraintEnd_toEndOf="@+id/redeemableAmountDescTextView"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/redeemableAmountDescTextView"
        app:layout_constraintTop_toTopOf="@+id/redeemableAmountTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/redeemableAmountDescTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Amount to be redeemed"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>

